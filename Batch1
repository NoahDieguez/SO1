@echo off
:menu
 cls
 echo.       MENU 
 echo.
 echo. a.-Opcion - 1
 echo. b.-Salir
 echo.
 set /P Opc: su opcion es:

 IF "%Opc%" == goto Op1
 IF "%Opc%" == goto Salir

:Op1
    Echo Has elegido opcion - 1
    ::Aqui van las lineas de comando de tu opcion
    color 02
    pause
    goto Menu 
:Salir
@cls&exit
